{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid"
    },
    "subtitle": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "price": {
      "type": "biginteger"
    },
    "badge": {
      "type": "enumeration",
      "enum": [
        "NEW",
        "SALE",
        "HOT"
      ]
    },
    "order": {
      "type": "integer"
    },
    "isActive": {
      "type": "boolean"
    }
  }
}
